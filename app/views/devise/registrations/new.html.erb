<div class="flex justify-center items-center min-h-screen">
  <div class="w-full max-w-lg space-y-6 bg-white p-6 rounded-lg shadow-md">
    <h1 class="text-center text-2xl font-bold">新規ユーザー登録</h1>

    <%= form_with model: @user, url: registration_path(resource_name), local: true do |f| %>
      <div class="mb-3 mt-4 text-left">
        <%= f.label :user_name, class: "block text-gray-700" %>
        <%= f.text_field :user_name, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500", placeholder: "ユーザー名" %>
      </div>

      <div class="mb-3 mt-4 text-left">
        <%= f.label :email, class: "block text-gray-700" %>
        <%= f.email_field :email, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500", placeholder: "Eメール" %>
      </div>

      <div class="mb-3 mt-4 text-left">
        <%= f.label :password, class: "block text-gray-700" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500", placeholder: "パスワードを入力" %>
      </div>

      <div class="mb-3 mt-4 text-left">
        <%= f.label :password_confirmation, class: "block text-gray-700" %>
        <%= f.password_field :password_confirmation, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500", placeholder: "確認用パスワードを入力" %>
      </div>

      <%# if devise_mapping.rememberable? %>
        <!--div class="field"-->
          <%#= f.check_box :remember_me %>
          <%#= f.label :remember_me %>
        <!--/div-->
      <%# end %>

      <%= f.submit "登録", class: "w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600 transition" %>
    <% end %>

    <% if notice %>
      <p class="text-green-500 mt-2"><%= notice %></p>
    <% elsif alert %>
      <p class="text-red-500 mt-2"><%= alert %></p>
    <% end %>

    <div class="bg-white shadow-md rounded-lg p-4 text-center w-full mt-3">
      <%= link_to "アカウントを持っている方はこちら", new_user_session_path, class: "text-sm my-4 text-blue-500 no-underline" %>
    </div>
  </div>
</div>

<%= render "devise/shared/links" %>
