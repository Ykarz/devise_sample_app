<div class="flex justify-center items-center min-h-screen">
  <div class="w-full max-w-lg space-y-6 bg-white p-6 rounded-lg shadow-md">
    <% if current_user %>
      <div class="text-center">
        <h1 class="text-2xl font-bold">ログイン完了</h1>
        <p class="mt-4">username: <%= current_user.user_name %></p>
        <p class="mb-4">e-mail: <%= current_user.email %></p>

        <%= button_to "ログアウト", destroy_user_session_path, class: "w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600 transition", method: :delete %>
      </div>

    <% else %>
      <div class="text-center">
        <h1 class="text-2xl font-bold">ログインしていない</h1>
        <%= button_to "サインイン", new_user_session_path, class: "w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600 transition" %>
      </div>
    <% end %>
</div>